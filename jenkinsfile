    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Cloning GitHub repository...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ—ï¸ Starting the build process...'
                bat 'echo Simulating code build...'
            }
        }
    }

    post {
        success {
            echo 'âœ… Build completed successfully!'
        }
